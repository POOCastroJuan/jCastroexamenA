<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jCastroexamenA.Views.vResumen"
             Title="vResumen">
    
    <VerticalStackLayout 
        Padding="25" 
        Spacing="20">
        
        <Label Text="Resumen"
               FontSize="22"
               TextColor="Black"
               HorizontalOptions="Center" />

        <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto" 
              ColumnDefinitions="Auto, Auto">
          
            <Label Text="Nombre: Juan" 
                   Grid.Row="0" 
                   Grid.Column="0" />
            <Label Text="Apellido: Pérez" 
                   Grid.Row="1" 
                   Grid.Column="0" />
            <Label Text="VA: 1000" 
                   Grid.Row="2" 
                   Grid.Column="0" />
            <Label Text="Fecha: 05/05/2025" 
                   Grid.Row="3" 
                   Grid.Column="0" />
            <Label Text="Ciudad: Ciudad 1" 
                   Grid.Row="4" 
                   Grid.Column="0" />
            <Label Text="Monto Inicial: $300" 
                   Grid.Row="5" 
                   Grid.Column="0" />
            <Label Text="Pago Total: $360" 
                   Grid.Row="6" 
                   Grid.Column="0" />

           
            <Button Text="Cerrar sesión" 
                    Grid.Row="7" 
                    Grid.ColumnSpan="2" 
                    Clicked="OnLogoutClicked" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>